<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>net.enilink.komma</groupId>
    <artifactId>komma-dependencies-p2</artifactId>
    <packaging>pom</packaging>
    <version>1.0.0</version>

    <build>
	<defaultGoal>p2:site</defaultGoal>
        <plugins>
            <plugin>
                <groupId>org.reficio</groupId>
                <artifactId>p2-maven-plugin</artifactId>
                <version>1.2.0-SNAPSHOT</version>
                <executions>
                    <execution>
                        <id>default-cli</id>
                        <!--
                        This is the configuration for the creation of a P2 update site.

                        Expected behavior:
                          - specified dependencies will be fetched
                          - transitive dependencies will be fetched (no default exclusions)
                          - jars containing source source code will NOT be fetched
                          - jars that are NOT OSGi bundles will be "bundled" using bnd tool,
                            if you specify instructions for these jars they will be APPLIED
                          - jars that are OSGi bundles will be simply included
                            if you specify instructions for these jars they will be IGNORED (see <override> option)
                          - p2 site will be generated

                        Generate the site by invoking: mvn p2:site
                        -->
                        <configuration>
                            <artifacts>
                                <artifact>
                                    <id>ch.qos.logback:logback-access:1.1.3</id>
                                    <transitive>false</transitive>
                                </artifact>
                                <artifact>
                                    <id>ch.qos.logback:logback-classic:1.1.3</id>
                                    <transitive>false</transitive>
                                </artifact>
                                <artifact>
                                    <id>ch.qos.logback:logback-core:1.1.3</id>
                                    <transitive>false</transitive>
                                </artifact>

                                <!-- Sesame and its dependencies -->
                                <artifact>
                                    <id>org.apache.commons:commons-lang3:3.4</id>
                                    <transitive>false</transitive>
                                </artifact>
                                <artifact>
                                    <id>com.opencsv:opencsv:3.7</id>
                                    <transitive>false</transitive>
                                </artifact>
                                <!--artifact>
                                    <id>com.spatial4j:spatial4j:0.5</id>
                                    <transitive>false</transitive>
                                </artifact-->
                                <artifact>
                                    <id>org.mapdb:mapdb:2.0-beta13</id>
                                    <transitive>false</transitive>
                                    <override>true</override>
                                </artifact>
                                <artifact>
                                    <id>org.apache.httpcomponents:httpclient-osgi:4.5.2</id>
                                    <transitive>false</transitive>
                                </artifact>
                                <artifact>
                                    <id>org.apache.httpcomponents:httpcore-osgi:4.4.4</id>
                                    <transitive>false</transitive>
                                </artifact>
                                <artifact>
                                    <id>com.fasterxml.jackson.core:jackson-core:2.7.2</id>
                                    <transitive>false</transitive>
                                </artifact>
                                <artifact>
                                    <id>com.fasterxml.jackson.core:jackson-databind:2.7.2</id>
                                    <transitive>false</transitive>
                                </artifact>
                                <artifact>
                                    <id>com.fasterxml.jackson.core:jackson-annotations:2.7.2</id>
                                    <transitive>false</transitive>
                                </artifact>
                                <artifact>
                                    <id>com.github.jsonld-java:jsonld-java:0.8.2</id>
                                    <transitive>false</transitive>
                                </artifact>
                                <artifact>
                                    <id>org.openrdf.sesame:sesame-runtime-osgi:2.8.9</id>
                                    <transitive>false</transitive>
                                    <override>true</override>
                                        <!-- Modify MANIFEST to make dependency on spatial4j optional -->
					<instructions>
                                            <Bundle-SymbolicName>org.openrdf.sesame2</Bundle-SymbolicName>
                                            <Export-Package>!*text-base,!*prop-base,org.openrdf.*,info.aduna.*</Export-Package>
                                            <Import-Package>
                                                org.slf4j.*,
                                                info.aduna.*;version=0,
                                                javax.*;resolution:=optional,
                                                org.apache.*;resolution:=optional,
                                                org.springframework.*;resolution:=optional,
                                                com.spatial4j.*;resolution:=optional,
                                                *
                                            </Import-Package>
                                       </instructions>
                                </artifact>
                                <artifact>
                                    <id>org.openrdf.sesame:sesame-queryrender:2.8.9</id>
                                    <transitive>false</transitive>
                                </artifact>

                                <artifact>
                                    <id>com.google.guava:guava:18.0</id>
                                    <transitive>false</transitive>
                                </artifact>
                                <artifact>
                                    <id>com.google.inject:guice:4.0</id>
                                    <transitive>false</transitive>
                                </artifact>
                                <artifact>
                                    <id>com.google.inject.extensions:guice-multibindings:4.0</id>
                                    <transitive>false</transitive>
                                </artifact>

				<artifact>
                                    <id>org.ow2.asm:asm-all:5.0.4</id>
                                    <transitive>false</transitive>
                                </artifact>
				<artifact>
                                    <id>aopalliance:aopalliance:1.0</id>
                                    <transitive>false</transitive>
                                </artifact>
				<artifact>
                                    <id>commons-io:commons-io:2.4</id>
                                    <transitive>false</transitive>
                                </artifact>

				<!-- grappa parser library with jitescript dependency -->
				<artifact>
                                    <id>me.qmx.jitescript:jitescript:0.4.0</id>
                                    <transitive>false</transitive>
                                    <instructions>
                                       <Import-Package>*;resolution:=optional</Import-Package>
                                       <Export-Package>!*.internal.*, *</Export-Package>
                                    </instructions>
                                </artifact>
				<artifact>
                                    <id>com.github.parboiled1:grappa:1.0.4</id>
                                    <transitive>false</transitive>
                                    <override>true</override>
                                    <instructions>
                                        <DynamicImport-Package>*</DynamicImport-Package>
                                    </instructions>
                                </artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <pluginRepositories>
        <pluginRepository>
            <id>reficio</id>
            <url>http://repo.reficio.org/maven/</url>
        </pluginRepository>
    </pluginRepositories>
</project>
